{
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://mentriq-backend.onrender.com/api/$1"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "https://mentriq-backend.onrender.com/uploads/$1"
        },
        {
            "source": "/(assets|images)/(.*)",
            "destination": "/$1/$2"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
